= form_for @topping do |f|
  - if @topping.errors.any?
    #error_explanation
      %h2= "#{pluralize(@topping.errors.count, "error")} prohibited this topping from being saved:"
      %ul
        - @topping.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :veg
    = f.check_box :veg
  .actions
    = f.submit 'Save'
